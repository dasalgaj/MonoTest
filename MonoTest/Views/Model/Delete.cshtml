@model VehicleServices.Models.VehicleModel

<form method="post" asp-action="Delete" style="width: 60%">
	<input asp-for="id" hidden />
	<input asp-for="make_id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete vehicle</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="name"></label>
			<input asp-for="name" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="abrv"></label>
			<input asp-for="abrv" class="form-control" disabled/>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="Model" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back
		</a>
	</div>
</form>
